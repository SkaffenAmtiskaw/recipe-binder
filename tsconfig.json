{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "paths": {
      "@firebase/*": ["./src/firebase/*"],
      "@utils/*": ["./src/utils/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS"
    }
  }
}
