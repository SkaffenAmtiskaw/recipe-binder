{
  "include": ["src", "types"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@firebase/*": ["./src/firebase/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS"
    }
  }
}
